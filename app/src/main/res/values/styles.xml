<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Heading" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/headingSize</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/paddingBottom</item>
        <item name="android:paddingTop">@dimen/paddingTop</item>
    </style>
    <style name="Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:paddingTop">@dimen/paddingTop</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/subtitleSize</item>
        <item name="android:paddingBottom">@dimen/paddingBottom</item>
    </style>
    <style name="Question" parent="TextAppearance.AppCompat">
        <item name="android:paddingBottom">@dimen/paddingBottom</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/questionSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/paddingTop</item>
    </style>
    <style name="Answer" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/answerSize</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
